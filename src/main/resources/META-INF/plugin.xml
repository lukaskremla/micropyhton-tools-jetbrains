<idea-plugin url="https://github.com/lukaskremla/micropython-tools-jetbrains">
    <name>MicroPython Tools</name>
    <id>micropython-tools-jetbrains</id>
    <change-notes><![CDATA[
      <p>See <a href="https://github.com/JetBrains/intellij-micropython/blob/master/CHANGES.md">CHANGES.md</a> on GitHub.</p>
    ]]></change-notes>
    <description><![CDATA[
      <p>Support for MicroPython devices in PyCharm and IntelliJ.</p>
      <br/>
      <p>Features:</p>
      <br/>
      <ul>
        <li>Code completion and docs for some MicroPython-specific modules</li>
        <li>Flash a Python file or directory to a device</li>
        <li>Run REPL on a device</li>
      </ul>
      <br/>
      <p>Currently, the plugin supports ESP8266, Pyboard, Micro:bit, and Raspberry Pi Pico devices.
       Your feedback and contributions are welcome!
       See <a href="https://github.com/JetBrains/intellij-micropython">the project page</a> on GitHub.</p>
    ]]></description>
    <version>SNAPSHOT</version>
    <vendor>Lukas Kremla</vendor>

    <dependencies>
        <plugin id="com.intellij.modules.lang"/>
        <plugin id="com.intellij.modules.python"/>
        <plugin id="org.jetbrains.plugins.terminal"/>
        <plugin id="com.intellij.modules.platform"/>
    </dependencies>


    <idea-version since-build="243" until-build="243.*"/>

    <extensions defaultExtensionNs="com.intellij">
        <facetType implementation="dev.micropythontools.intellij.settings.MicroPythonFacetType"/>
        <configurationType implementation="dev.micropythontools.intellij.run.MicroPythonConfigurationType"/>
        <runConfigurationProducer
                implementation="dev.micropythontools.intellij.run.MicroPythonRunConfigurationProducer"/>
        <projectConfigurable groupId="language"
                             id="dev.micropythontools.intellij.configurable"
                             displayName="MicroPython"
                             instance="dev.micropythontools.intellij.settings.MicroPythonProjectConfigurable"/>
        <localInspection language="Python"
                         displayName="MicroPython requirements inspection"
                         groupName="MicroPython"
                         enabledByDefault="true"
                         implementationClass="dev.micropythontools.intellij.inspections.MicroPythonRequirementsInspection"/>
        <notificationGroup displayType="BALLOON" id="Micropython"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <toolWindow factoryClass="dev.micropythontools.intellij.nova.MicroPythonToolWindow"
                    id="MicroPython Tools"
                    anchor="bottom"
                    icon="/icons/micropython_tw.svg"
                    canCloseContents="false"/>
    </extensions>

    <actions>
        <group id="micropython.repl.FSToolbar">
            <action id="micropython.repl.Disconnect" class="dev.micropythontools.intellij.nova.Disconnect"
                    icon="/icons/connectActive.svg">
                <keyboard-shortcut first-keystroke="control CLOSE_BRACKET" keymap="$default"/>
            </action>
            <action id="micropython.repl.Connect" class="dev.micropythontools.intellij.nova.ConnectAction"
                    icon="/icons/connectActive.svg"/>
            <action id="micropython.fs.Refresh" class="dev.micropythontools.intellij.nova.Refresh"
                    icon="AllIcons.Actions.StopRefresh">
                <keyboard-shortcut first-keystroke="control R" keymap="$default"/>
            </action>
            <action id="micropython.fs.CreateFolder" class="dev.micropythontools.intellij.nova.CreateDeviceFolderAction"
                    icon="AllIcons.Actions.AddDirectory"/>
            <action id="micropython.fs.Download" class="dev.micropythontools.intellij.nova.DownloadFromDeviceAction"
                    icon="AllIcons.Actions.Download"/>
            <action id="micropython.fs.Delete" class="dev.micropythontools.intellij.nova.DeleteFiles"
                    use-shortcut-of="$Delete" icon="AllIcons.Actions.GC"/>
            <action id="micropython.repl.ConnectionParameters"
                    class="dev.micropythontools.intellij.nova.OpenSettingsAction"
                    icon="AllIcons.General.GearPlain"/>
            <action id="micropython.repl.AutoClear" class="dev.micropythontools.intellij.nova.AutoClearAction"/>
        </group>
        <group id="micropython.repl.FSContextMenu">
            <action class="dev.micropythontools.intellij.nova.OpenMpyFile" id="micropython.repl.OpenFile"
                    icon="AllIcons.Actions.MenuOpen"/>
            <reference ref="micropython.fs.Refresh"/>
            <reference ref="micropython.fs.Download"/>
            <separator/>
            <reference ref="micropython.fs.CreateFolder"/>
            <reference ref="micropython.fs.Delete"/>
        </group>

        <group id="micropython.repl.ReplToolbar">
            <reference ref="micropython.repl.Connect"/>
            <reference ref="micropython.repl.Disconnect"/>
            <action id="micropython.repl.SoftReset" class="dev.micropythontools.intellij.nova.SoftResetAction"
                    icon="AllIcons.Actions.StopAndRestart" description="Soft reset the board">
                <keyboard-shortcut first-keystroke="control D" keymap="$default"/>
            </action>
            <action id="micropython.repl.Interrupt" class="dev.micropythontools.intellij.nova.InterruptAction"
                    icon="AllIcons.Actions.Suspend" description="Interrupt a running program">
            </action>
            <reference ref="micropython.repl.ConnectionParameters"/>
            <reference ref="micropython.repl.AutoClear"/>
        </group>

        <action id="micropython.repl.UploadFile" class="dev.micropythontools.intellij.nova.UploadFile"
                icon="AllIcons.Actions.Upload">
            <add-to-group group-id="EditorPopupMenu" anchor="before" relative-to-action="ExecuteInPyConsoleAction"/>
            <add-to-group group-id="ProjectViewPopupMenuSettingsGroup" anchor="last"/>
        </action>

        <action id="micropython.repl.InstantRun" class="dev.micropythontools.intellij.nova.InstantRun"
                text="Execute File in Micropython REPL"
                icon="AllIcons.Actions.Rerun">
            <add-to-group group-id="EditorPopupMenu" anchor="before" relative-to-action="micropython.repl.UploadFile"/>
            <add-to-group group-id="ProjectViewPopupMenuSettingsGroup" anchor="before"
                          relative-to-action="micropython.repl.UploadFile"/>
        </action>

        <action id="micropython.repl.InstantFragmentRun" class="dev.micropythontools.intellij.nova.InstantFragmentRun"
                text="Execute Fragment" icon="AllIcons.Actions.Run_anything">
            <add-to-group group-id="EditorPopupMenu" anchor="before" relative-to-action="micropython.repl.InstantRun"/>
        </action>
    </actions>
    <resource-bundle>messages.Micropython</resource-bundle>
</idea-plugin>
